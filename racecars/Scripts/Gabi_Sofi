import random
from simulation.script_api.py import AutoAuto # type: ignore

class Auto(AutoAuto):
    def __init__(self) -> None:
        super().__init__()
        self.step = 0

    def GetName(self) -> str:
        return "Lightning McQueen StepBot"

    def PickMove(self, auto, world, allowed_moves):
        self.step += 1

        if not allowed_moves:
            return None

        best = allowed_moves[0]
        for move in allowed_moves:
            if move.x > best.x:
                best = move

        return best
